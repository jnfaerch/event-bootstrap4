<div class="navbar-wagon d-flex">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo-blue.png", height: 50 %>
  <% end %>
  <h3 class="text-danger">AirB-n-Bar</h3>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right d-flex">

    <%= link_to "Show all Spaces", spaces_path, class: "navbar-wagon-item navbar-wagon-link d-none d-md-block" %>

    <!-- Links when logged in -->
    <% if user_signed_in? %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item d-none d-md-block">
        <div class="dropdown">
          <%= image_tag "face-avatar.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to new_space_path do %>
                <i class="fas fa-plus"></i>  <%= t(".new", default: "Add new Space") %>
              <% end %>
            </li>
            <li>
              <%= link_to dashboard_path do %>
                <i class="fas fa-cog"></i>  <%= t(".dashboard", default: "My Dashboard") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item d-md-none">
    <div class="dropdown">
      <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li>
          <%= link_to spaces_path do %>
            <%= t(".spaces", default: "Show all Spaces") %>
          <% end %>
        </li>

        <!-- Links when logged in -->
        <% if user_signed_in? %>

          <li>
          <%= link_to new_space_path do %>
            <%= t(".new", default: "Add new Space") %>
          <% end %>
          </li>
          <li>
            <%= link_to bookings_path do %>
              <%= t(".bookings", default: "My Dashboard") %>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, method: :delete do %>
              <%= t(".sign_out", default: "Log out") %>
            <% end %>
          </li>

        <% else %>
         <!-- Login link (when logged out) -->
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <% end %>
      </ul>
    </div>
  </div>

</div>

